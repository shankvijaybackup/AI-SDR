# ========================================
# AI-SDR Backend Configuration
# ========================================

# Server Configuration
PORT=4000
NODE_ENV=development
PUBLIC_BASE_URL=https://your-app.onrender.com
FRONTEND_ORIGIN=http://localhost:3000

# ========================================
# Database
# ========================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_sdr

# ========================================
# Redis (Required for Production)
# ========================================
# Local: redis://localhost:6379
# Upstash: redis://default:password@region.upstash.io:port
REDIS_URL=redis://localhost:6379

# ========================================
# Twilio Configuration
# ========================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# OpenAI Configuration
# ========================================
OPENAI_API_KEY=sk-your-key-here

# ========================================
# TTS Configuration
# ========================================
# ElevenLabs
ELEVEN_API_KEY=your-elevenlabs-key
ELEVEN_VOICE_ID_MALE=voice-id-here
ELEVEN_VOICE_ID_FEMALE=voice-id-here

# Chatterbox (Optional)
USE_CHATTERBOX=false
CHATTERBOX_VOICE_MALE=alex
CHATTERBOX_VOICE_FEMALE=sarah

# Deepgram (Optional)
USE_DEEPGRAM=false
DEEPGRAM_API_KEY=your-deepgram-key

# XTTS (Optional)
USE_XTTS=false
XTTS_URL=http://localhost:8000/tts

# ========================================
# Security & Monitoring
# ========================================
# Rate Limiting (Enable in production)
ENABLE_RATE_LIMITING=true

# Encryption Key (Required for Production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-key-here

# Sentry Error Monitoring (Optional but Recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# Optional Integrations
# ========================================
# HubSpot
HUBSPOT_ACCESS_TOKEN=your-hubspot-token

# SendGrid
SENDGRID_API_KEY=your-sendgrid-key
